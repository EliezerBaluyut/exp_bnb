<script type="text/javascript">
    function GetDays() {
        var checkOut = new Date(document.getElementById("check_out").value);
        var checkIn = new Date(document.getElementById("check_in").value);
        return parseInt((checkOut - checkIn) / (24 * 3600 * 1000));
    }

    function cal() {
        if (document.getElementById("check_out")) {
            var days = document.getElementById("numDaysVal").value = GetDays();
            var price = document.getElementById("rPrice");
            var val = price.innerHTML;
            val = parseInt(val)
            var totalPrice = val * days;
            document.getElementById("totalPriceVal").value = totalPrice;
        }
    }


</script>


